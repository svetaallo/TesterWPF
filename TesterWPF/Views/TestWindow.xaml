<Window x:Class="TesterWPF.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesterWPF"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="textBlock" Width="600" Height="200" VerticalAlignment="Center" Margin="20" />
        <Button x:Name="buttonCheck" Content="Check" FontSize="22" Width="70" Height="60" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20"/>
        <Button x:Name="buttonNext" Content=">" FontSize="22" Width="30" Height="60" HorizontalAlignment="Right" Margin="20" VerticalAlignment="Bottom"/>
        <Button x:Name="buttonPrevious" Content="&lt;" FontSize="22" Width="30" Height="60" HorizontalAlignment="Left" Margin="20" VerticalAlignment="Bottom"/>
        <Button x:Name="menu" Content="Меню" Width="70" Height="30" Margin="20" VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
